    <script>
        function generateAndDownloadPDF() {
            // Mengambil nilai dari input fields
            var namaDosen = document.getElementById("namaDosen").value;
            var namaMahasiswa = document.getElementById("namaMahasiswa").value;
            var nimMahasiswa = document.getElementById("nimMahasiswa").value;
            var alamat = document.getElementById("alamat").value;
            var tanggal = document.getElementById("tanggal").value;

            // Mengganti nilai pada laporan dengan nilai yang diambil dari input fields
            var laporan = document.getElementById("laporan");
            laporan.style.display = "block"; // Menampilkan elemen laporan
            laporan.innerHTML = laporan.innerHTML.replace("LukmanSupiardi, S.Kom", namaDosen);
            laporan.innerHTML = laporan.innerHTML.replace("Ali Gozali", namaMahasiswa);
            laporan.innerHTML = laporan.innerHTML.replace("4032302302", nimMahasiswa);
            laporan.innerHTML = laporan.innerHTML.replace("Jalan Lidah Wetan", alamat);
            laporan.innerHTML = laporan.innerHTML.replace("Surabaya, 14 Oktober 2023", tanggal);


            // Sembunyikan elemen formulir
            var editForm = document.getElementById("editForm");
            editForm.style.display = "none";
        
            // Hapus judul halaman
            document.title = "";
        }
        </script>
        
